{
  "manifest_version": 3,
  "name": "ChatGPT Atlas Opener",
  "description": "Open the current page in the ChatGPT Atlas macOS app.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "nativeMessaging"
  ],
  "action": {
    "default_title": "Open in ChatGPT Atlas",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "commands": {
    "open-in-atlas": {
      "suggested_key": {
        "default": "Alt+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Open the current tab in ChatGPT Atlas"
    }
  }
}
